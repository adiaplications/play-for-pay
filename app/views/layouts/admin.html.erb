<!DOCTYPE html>
<html>
  <head>
    <title>MobPartner Ads | <%= @page_title || "Admin" %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>

  </head>
  <body>
    <div id="header">
      <h1>MobPartner Ads Admin</h1>
    </div>
    <%= link_to('Campaign Page', {:controller => 'campaigns', :action => 'index'}) %> <br/>
    <%= link_to('Ads Page', {:controller => 'ads', :action => 'index'}) %> <br/>
    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Adi Matzliah</p>
    </div>
  </body>
</html>
